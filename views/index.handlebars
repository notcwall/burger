<h1>Boigahs</h1>

<h2>Boigahs Available</h2>

<ul>
	{{#each burgers}}
		{{#unless this.devoured}}
			<li>
				{{this.name}}

				<form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
					<input type="hidden" name="devoured" value="true">
					<button type="submit">Devour Boigah</button>
				</form>
			</li>
		{{/unless}}
	{{/each}}
</ul>

<h2>Devoured Boigahs</h2>

<ul>
	{{#each burgers}}
		{{#if this.devoured}}
			<li>
				{{this.name}}
			</li>
		{{/if}}
	{{/each}}
</ul>

<h3>Order a Boigah</h3>
<form action="burgers/create" method="POST">
	<input type="text" name="name">
	<button type="submit">Add Boigah</button>
</form>